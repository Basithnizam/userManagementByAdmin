


<main class="container text-light col-mid-6 container-fluid"
    style="min-height: 100vh;display:flex;flex-direction: column; justify-content: left;">
    <div class="d-flex p-4 justify-content-between  " style="position: sticky; top:60px">
    <a href="/admin"><button type="button" class="btn btn-primary btn-lg btn-block m-2 w-90%">HOME</button></a>
    <a href="/logout"><button type="button" class="btn btn-danger btn-lg btn-block m-2 w-90%">{{button}}</button></a>
</div>
    
    <div class="row ">
        <div class=" d-flex p-4 justify-content-center flex-column align-items-center ">
            <h1 style="padding-top: 3rem;">{{welcome}}</h1>


        </div>
    </div>
    <div class="input-group ">
        <div class=" container-fluid pb-3 col-md-12 ">

            <body>
                <nav class="navbar   bg-dark ">
                    <form class="d-flex justify-content-between flex-grow-1 ps-2 " method="post" action="/admin/search">
                        <input name="searchQuery" class="flex-grow-1 " type="search"
                            placeholder="Enter the keyword for search" aria-label="Search">
                        <button style="margin-inline-start:2rem;margin-inline-end:1rem; padding-inline: 2rem;"
                            class=" btn btn-primary my-2 my-sm-0" type="submit">Search</button>

                    </form>



                </nav>

                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Index No.</th>
                            <th>Firstname</th>
                            <th>Lastname</th>
                            <th>Email Id</th>
                            
                            <th><a href="/admin/adduser"><button style="padding-inline: 2rem;" class=" btn btn-warning my-2 my-sm-0 py-1 ">Add user</button></a></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <!-- Add 1 to @index to start serial number from 1 -->
                            <td>{{ @index }}</td>
                            <td>{{ this.firstname }}</td>
                            <td>{{ this.lastname }}</td>
                            <td>{{ this.username }}</td>
                            
                            <td>
                                <a href="/admin/findusers/{{ this._id }}"   ><button class="btn btn-outline-success">Edit</button></a>
                                <a href="/admin/deleteuser/{{ this._id }}" onclick="return confirm('Are you sure you want to delete this user?')"  ><button class="btn btn-danger">Delete</button></a>
                                
                            </td>
                        </tr>
                        {{/each}}
                        
                    </tbody>
                </table>


               
            </body>




        </div>
    </div>
    


</main>

